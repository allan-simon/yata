<?xml version="1.0" encoding="UTF-8"?>
<dictionary>
    <all_flections>

        <flection_rule id="invariable">
            <flection type="">
                <flection_regexp priority="0">
                    <from_lemme><![CDATA[.*]]></from_lemme>
                    <to_flexion><![CDATA[\g<0>]]></to_flexion>
                </flection_regexp>
            </flection>
        </flection_rule>

        <flection_rule id="nom_propre" >
            <flection type="singulier masculin">
                <flection_regexp priority="0">
                    <from_lemme><![CDATA[.*]]></from_lemme>
                    <to_flexion><![CDATA[\g<0>]]></to_flexion>
                </flection_regexp>
            </flection>
            <flection type="singulier feminin">
                <flection_regexp priority="0">
                    <from_lemme><![CDATA[.*]]></from_lemme>
                    <to_flexion><![CDATA[\g<0>]]></to_flexion>
                </flection_regexp>
            </flection>
        </flection_rule>
        
        <flection_rule id="nom_commun_regulier">
            <flection type="singulier masculin">
                <flection_regexp priority="0">
                    <from_lemme><![CDATA[.*]]></from_lemme>
                    <to_flexion><![CDATA[\g<0>]]></to_flexion>
                </flection_regexp>
            </flection>
            <flection type="pluriel">
                <flection_regexp priority="0">
                    <from_lemme><![CDATA[.*]]></from_lemme>
                    <to_flexion><![CDATA[\g<0>s]]></to_flexion>
                </flection_regexp>
            </flection>
        </flection_rule>

        <!-- PRONOM INDEFINI "UN" -->
        
        <flection_rule id="un">
            <flection type="singulier masculin">
                <flection_regexp priority="0">
                    <from_lemme><![CDATA[.*]]></from_lemme>
                    <to_flexion><![CDATA[\g<0>]]></to_flexion>
                </flection_regexp>
            </flection>
            <flection type="singulier feminin">
                <flection_regexp priority="0">
                    <from_lemme><![CDATA[.*]]></from_lemme>
                    <to_flexion><![CDATA[\g<0>e]]></to_flexion>
                </flection_regexp>
            </flection>
            <flection type="pluriel masculin">
                <flection_regexp priority="0">
                    <from_lemme><![CDATA[.*]]></from_lemme>
                    <to_flexion><![CDATA[des]]></to_flexion>
                </flection_regexp>
            </flection>
            <flection type="pluriel masculin">
                <flection_regexp priority="0">
                    <from_lemme><![CDATA[.*]]></from_lemme>
                    <to_flexion><![CDATA[des]]></to_flexion>
                </flection_regexp>
            </flection>
        </flection_rule>
    
        <!-- VERBE PREMIER GROUPE -->

        <flection_rule id="premier_groupe">
            <flection type="infinitif">
                <flection_regexp priority="0">
                    <from_lemme><![CDATA[.*]]></from_lemme>
                    <to_flexion><![CDATA[\g<0>]]></to_flexion>
                </flection_regexp>
            </flection>

            <flection type="indicatif present 1_personne singulier">
                <flection_regexp priority="0">
                    <from_lemme><![CDATA[(.*)er]]></from_lemme>
                    <to_flexion><![CDATA[\g<1>e]]></to_flexion>
                </flection_regexp>
            </flection>    


            <flection type="indicatif present 2_personne singulier">
                <flection_regexp priority="0">
                    <from_lemme><![CDATA[(.*)er]]></from_lemme>
                    <to_flexion><![CDATA[\g<1>es]]></to_flexion>
                </flection_regexp>
            </flection>    

            <flection type="indicatif present 3_personne singulier">
                <flection_regexp priority="0">
                    <from_lemme><![CDATA[(.*)er]]></from_lemme>
                    <to_flexion><![CDATA[\g<1>e]]></to_flexion>
                </flection_regexp>
            </flection>
 
            <flection type="indicatif present 1_personne pluriel">
                <flection_regexp priority="0">
                    <from_lemme><![CDATA[(.*)er]]></from_lemme>
                    <to_flexion><![CDATA[\g<1>ons]]></to_flexion>
                </flection_regexp>
            
                <flection_regexp priority="1">
                    <from_lemme ><![CDATA[(.*g)er]]></from_lemme>
                    <to_flexion ><![CDATA[\g<1>eons]]></to_flexion>
                </flection_regexp>

            </flection>    


            <flection type="indicatif present 2_personne pluriel">
                <flection_regexp priority="0">
                    <from_lemme><![CDATA[(.*)er]]></from_lemme>
                    <to_flexion><![CDATA[\g<1>ez]]></to_flexion>
                </flection_regexp>
            </flection>    

            <flection type="indicatif present 3_personne pluriel">
                <flection_regexp priority="0">
                    <from_lemme><![CDATA[(.*)er]]></from_lemme>
                    <to_flexion><![CDATA[\g<1>ent]]></to_flexion>
                </flection_regexp>
            </flection>
        
       
        </flection_rule>


        <!-- VERBE DEUXIEME GROUPE -->

        <flection_rule id="deuxieme_groupe">
            <flection type="infinitif">
                <flection_regexp priority="0">
                    <from_lemme><![CDATA[.*]]></from_lemme>
                    <to_flexion><![CDATA[\g<0>]]></to_flexion>
                </flection_regexp>
            </flection>

            <flection type="indicatif present 1_personne singulier">
                <flection_regexp priority="0">
                    <from_lemme><![CDATA[(.*)ir]]></from_lemme>
                    <to_flexion><![CDATA[\g<1>is]]></to_flexion>
                </flection_regexp>
            </flection>    


            <flection type="indicatif present 2_personne singulier">
                <flection_regexp priority="0">
                    <from_lemme><![CDATA[(.*)ir]]></from_lemme>
                    <to_flexion><![CDATA[\g<1>is]]></to_flexion>
                </flection_regexp>
            </flection>    

            <flection type="indicatif present 3_personne singulier">
                <flection_regexp priority="0">
                    <from_lemme><![CDATA[(.*)ir]]></from_lemme>
                    <to_flexion><![CDATA[\g<1>it]]></to_flexion>
                </flection_regexp>
            </flection>
 
            <flection type="indicatif present 1_personne pluriel">
                <flection_regexp priority="0">
                    <from_lemme><![CDATA[(.*)ir]]></from_lemme>
                    <to_flexion><![CDATA[\g<1>issons]]></to_flexion>
                </flection_regexp>
            </flection>    


            <flection type="indicatif present 2_personne pluriel">
                <flection_regexp priority="0">
                    <from_lemme><![CDATA[(.*)ir]]></from_lemme>
                    <to_flexion><![CDATA[\g<1>issez]]></to_flexion>
                </flection_regexp>
            </flection>    

            <flection type="indicatif present 3_personne pluriel">
                <flection_regexp priority="0">
                    <from_lemme><![CDATA[(.*)ir]]></from_lemme>
                    <to_flexion><![CDATA[\g<1>issent]]></to_flexion>
                </flection_regexp>
            </flection>
       
        </flection_rule>



    </all_flections>

