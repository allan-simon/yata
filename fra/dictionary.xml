<?xml version="1.0" encoding="UTF-8"?>
<dictionary>
    <all_flections>

        <flection_rule id="proper_noun" >
            <flection type="singular male">
                <flection_regexp priority="0">
                    <from_lemme><![CDATA[.*]]></from_lemme>
                    <to_flexion><![CDATA[\g<0>]]></to_flexion>
                </flection_regexp>
            </flection>
            <flection type="singular female">
                <flection_regexp priority="0">
                    <from_lemme><![CDATA[.*]]></from_lemme>
                    <to_flexion><![CDATA[\g<0>]]></to_flexion>
                </flection_regexp>
            </flection>


        </flection_rule>
        <flection_rule id="regular_common_noun">
            <flection type="singular male">
                <flection_regexp priority="0">
                    <from_lemme><![CDATA[.*]]></from_lemme>
                    <to_flexion><![CDATA[\g<0>]]></to_flexion>
                </flection_regexp>
            </flection>
            <flection type="plural">
                <flection_regexp priority="0">
                    <from_lemme><![CDATA[.*]]></from_lemme>
                    <to_flexion><![CDATA[\g<0>s]]></to_flexion>
                </flection_regexp>
            </flection>
        </flection_rule>

        <flection_rule id="un">
            <flection type="singular male">
                <flection_regexp priority="0">
                    <from_lemme><![CDATA[.*]]></from_lemme>
                    <to_flexion><![CDATA[\g<0>]]></to_flexion>
                </flection_regexp>
            </flection>
            <flection type="singular female">
                <flection_regexp priority="0">
                    <from_lemme><![CDATA[.*]]></from_lemme>
                    <to_flexion><![CDATA[\g<0>e]]></to_flexion>
                </flection_regexp>
            </flection>
            <flection type="plural male">
                <flection_regexp priority="0">
                    <from_lemme><![CDATA[.*]]></from_lemme>
                    <to_flexion><![CDATA[des]]></to_flexion>
                </flection_regexp>
            </flection>
            <flection type="plural male">
                <flection_regexp priority="0">
                    <from_lemme><![CDATA[.*]]></from_lemme>
                    <to_flexion><![CDATA[des]]></to_flexion>
                </flection_regexp>
            </flection>
        </flection_rule>
    

        <flection_rule id="first_group">
            <flection type="infinitive">
                <flection_regexp priority="0">
                    <from_lemme><![CDATA[.*]]></from_lemme>
                    <to_flexion><![CDATA[\g<0>]]></to_flexion>
                </flection_regexp>
            </flection>

            <flection type="indicative present 1_person singular">
                <flection_regexp priority="0">
                    <from_lemme><![CDATA[(.*)er]]></from_lemme>
                    <to_flexion><![CDATA[\g<1>e]]></to_flexion>
                </flection_regexp>
            </flection>    


            <flection type="indicative present 2_person singular">
                <flection_regexp priority="0">
                    <from_lemme><![CDATA[(.*)er]]></from_lemme>
                    <to_flexion><![CDATA[\g<1>es]]></to_flexion>
                </flection_regexp>
            </flection>    

            <flection type="indicative present 3_person singular">
                <flection_regexp priority="0">
                    <from_lemme><![CDATA[(.*)er]]></from_lemme>
                    <to_flexion><![CDATA[\g<1>e]]></to_flexion>
                </flection_regexp>
            </flection>
 
            <flection type="indicative present 1_person plural">
                <flection_regexp priority="0">
                    <from_lemme><![CDATA[(.*)er]]></from_lemme>
                    <to_flexion><![CDATA[\g<1>ons]]></to_flexion>
                </flection_regexp>
            
                <flection_regexp priority="1">
                    <from_lemme ><![CDATA[(.*g)er]]></from_lemme>
                    <to_flexion ><![CDATA[\g<1>eons]]></to_flexion>
                </flection_regexp>

            </flection>    


            <flection type="indicative present 2_person plural">
                <flection_regexp priority="0">
                    <from_lemme><![CDATA[(.*)er]]></from_lemme>
                    <to_flexion><![CDATA[\g<1>ez]]></to_flexion>
                </flection_regexp>
            </flection>    

            <flection type="indicative present 3_person plural">
                <flection_regexp priority="0">
                    <from_lemme><![CDATA[(.*)er]]></from_lemme>
                    <to_flexion><![CDATA[\g<1>ent]]></to_flexion>
                </flection_regexp>
            </flection>
        
       
        </flection_rule>

    </all_flections>

    <words>
    
        <word type="determinant">
            <lemme flection="un">un</lemme>  
        </word>


        <word type="common_noun">
            <lemme flection="regular_common_noun">pomme</lemme>
            <attribute type="gender">female</attribute>
        </word>
        <word type="common_noun">
            <lemme flection="regular_common_noun">tarte</lemme>
            <attribute type="gender">female</attribute>
        </word>
        
        <word type="proper_noun">
        	<lemme flection="proper_noun">Allan</lemme>
            <attribute type="gender">male</attribute>
        </word>
        <word type="proper_noun">
        	<lemme>Baptiste</lemme>
            <attribute type="gender">male</attribute>
        </word>
        
        <word type="verb">
            <lemme flection="first_group">manger</lemme>
            <!-- define a kind of attributes to precise both valency and if it is transitive etc.-->
        </word>
        <word type="verb">
            <lemme flection="third_group">prendre</lemme>
        </word>
        <word type="verb">
            <lemme flection="first_group">aimer</lemme>
        </word>
        
        <word type="verb">
            <lemme flection="first_group">cuisiner</lemme>
        </word>
    </words>

</dictionary>
